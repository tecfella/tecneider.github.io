#!/bin/bash

# go to master branch
git checkout master

# remove everything except the .git and build folders
find . -type 'd' -maxdepth 1 | grep -v ".git" | grep -v '^.$' | grep -v 'build' | xargs rm -rf
find . -type 'f' -maxdepth 1 | xargs rm -f

# put the contents of build into this directory
mv build/* .

# push the new content to master
git add .
git commit -m "New release"
git push
